<h1> Hello, <%= current_user.first_name %>! </h1>

<h5> All the songs in our hub:</h5>
<table>
<tr><th>Artist</th>
<th>Title</th>
<th>No. of Times Song Added</th>
<th> </th>
</tr>
<% @songs.each do |song| %>
<tr> <td> <%= song.artist %></td>
<td> <a href="/songs/<%= song.id %>"> <%= song.title %> </a> </td>
<td> <%= song.count %> </td>
<td> <form action="/songs/<%= song.id %>" method="post">
<input type="hidden" name="_method" value="patch">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<button>Add</button>
</form>
</tr>
<% end %>
</table>
<br>

<h3> Add a New Song </h3>
<form action="/songs" method="post">
<input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
<label>Title:</label>
<input type="text" name="song[title]" id="song_title">
<label>Artist:</label>
<input type="text" name="song[artist]" id="song_artist">
<button> Create New Song </button>
</form>
